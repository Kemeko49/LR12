@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Головна</title>
	<style>
		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}

		body {
			font-family: 'Roboto', sans-serif;
		}

		input {
			height: 45px;
			width: 100%;
			color: #385983;
			font-size: 14px;
			line-height: 16px;
			border: 2px solid #E9F2FF;
			border-radius: 5px;
			padding-left: 25px;
		}

			input:focus {
				outline: none;
				border: 2px solid #C1d9fd;
			}

		main {
			background: #DCE8FD;
			height: 100vh;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
		}

		.form-title {
			color: #30507D;
			font-weight: 300;
			font-size: 28px;
			line-height: 23px;
			margin-bottom: 38px;
			text-align: center;
		}

		.form-field {
			margin-bottom: 13px;
		}

		.button {
			width: 150px;
			font-weight: bold;
			font-size: 14px;
			line-height: 45px;
			display: block;
			height: 45px;
			background: #247FFF;
			border-radius: 5px;
			color: #fff;
			text-transform: uppercase;
			text-align: center;
			margin-left: 100px;
			cursor: pointer;
		}

		.form-buttons {
			text-align: center;
		}

		a.button {
			text-decoration: none;
		}

		label {
			text-align: center;
		}
	</style>
</head>
<body>
<h2>Додати користувача</h2>

<form asp-action="Create" asp-controller="Main" method="post">
    <p>
            <label asp-for="FirstName">Ім'я</label><br />
            <input type="text"  asp-for="FirstName" />
    </p>
        <p>
            <label asp-for="LastName">Прізвище</label><br />
            <input type="text" asp-for="LastName" />
        </p>
    <p>
        <label asp-for="Age">Вік</label><br />
            <input type="number"  asp-for="Age" />
    </p>
    <p>
        <input type="submit" value="Надіслати" />
    </p>
</form>
</body>
</html>