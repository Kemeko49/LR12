@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IndexModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Индекс</title>
    <style>
        <style >
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
        }

        input {
            height: 45px;
            width: 100%;
            color: #385983;
            font-size: 14px;
            line-height: 16px;
            border: 2px solid #E9F2FF;
            border-radius: 5px;
            padding-left: 25px;
        }

            input:focus {
                outline: none;
                border: 2px solid #C1d9fd;
            }

        main {
            background: #DCE8FD;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .form-title {
            color: #30507D;
            font-weight: 300;
            font-size: 28px;
            line-height: 23px;
            margin-bottom: 38px;
            text-align: center;
        }

        .form-field {
            margin-bottom: 13px;
        }

        .button {
            width: 150px;
            font-weight: bold;
            font-size: 14px;
            line-height: 45px;
            display: block;
            height: 45px;
            background: #247FFF;
            border-radius: 5px;
            color: #fff;
            text-transform: uppercase;
            text-align: center;
            margin-left: 100px;
            cursor: pointer;
        }

        .form-buttons {
            text-align: center;
        }

        a.button {
            text-decoration: none;
        }

        label {
            text-align: center;
        }
        table{
            border-collapse:collapse;
        }
        th, td{
            padding: 15px;
            border: 3px solid cyan
        }
    </style>
</head>
<body>
<h2>Список користувачів</h2>

    
    <table class="table">
        <tr>
            <th>Ім'я</th>
            <th>Прізвище</th>
            <th>Вік</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>
                    <a asp-action="Edit" asp-controller="Main" asp-route-id="@item.Id">Змінити</a>
                </td>
                <td>
                    <form asp-controller="Main" asp-action="Delete" method="post" asp-route-id="@item.Id">
                        <input type="submit" value="Видалити" />
                    </form>
                </td>
            </tr>
        }
    </table>
    <p><a asp-action="Create" asp-controller="Main">Додати користувача</a></p>
    <table class="table">
        <tr><th>Назва</th><th>Кількість працівників</th></tr>
        @foreach (var item in Model.Companies)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Employees</td>
            </tr>
        }
        </table>
</body>
</html>